{
   "name": "freela.base",
   "version": "1.0.0",
   "description": "",
   "author": "Henrique Rodrigues Silva",
   "license": "MIT",
   "scripts": {
      "build": "tsc -p tsconfig.build.json",
      "build:prod": "rm -r -f dist && rimraf dist && npm run build",
      "build:docker": "docker build . -t base/api",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:azure": "npm run deploy && func host start",
      "start:prod": "node --icu-data-dir=./node_modules/full-icu dist/main.js",
      "lint": "tslint -p tsconfig.json -c tslint.json",
      "test": "npm run test:e2e",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "NODE_ENV=test node node_modules/jest/bin/jest.js --config ./jest-e2e.json",
      "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.js",
      "migration": "npm run typeorm:cli -- migration:run",
      "add-migration": "npm run typeorm:cli -- migration:generate -n",
      "revert-migration": "npm run typeorm:cli -- migration:revert",
      "deploy:docker": "npm run build:docker && docker push base/api",
      "deploy:heroku": "git push heroku master"
   },
   "dependencies": {
      "@nestjs/azure-storage": "^2.1.1",
      "@nestjs/common": "^6.10.14",
      "@nestjs/core": "^6.10.14",
      "@nestjs/jwt": "^6.1.1",
      "@nestjs/passport": "^6.1.1",
      "@nestjs/platform-express": "^6.10.14",
      "@nestjs/swagger": "^3.1.0",
      "@nestjs/typeorm": "^6.3.1",
      "@nestjsx/crud": "^4.4.1",
      "@nestjsx/crud-typeorm": "^4.4.1",
      "@sentry/minimal": "^5.13.2",
      "@sentry/node": "^5.13.2",
      "axios": "0.21.1",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.19.0",
      "class-transformer": "^0.2.3",
      "class-validator": "^0.10.2",
      "commitizen": "^4.0.4",
      "connect-timeout": "^1.9.0",
      "cz-conventional-changelog": "^3.1.0",
      "dotenv": "^8.2.0",
      "envalid": "^6.0.0",
      "express-rate-limit": "^5.0.0",
      "full-icu": "^1.3.0",
      "google-auth-library": "^5.8.0",
      "guid-typescript": "^1.0.9",
      "helmet": "^3.21.2",
      "jwt-decode": "^2.2.0",
      "luxon": "^1.22.0",
      "md5": "^2.2.1",
      "ms": "^2.1.2",
      "mysql": "^2.17.1",
      "nodemon": "^1.19.4",
      "omit-deep": "^0.3.0",
      "passport": "^0.4.1",
      "passport-facebook-token": "^3.3.0",
      "passport-jwt": "^4.0.0",
      "passport-local": "^1.0.0",
      "pdfmake": "^0.1.64",
      "pdfmake-unicode": "0.0.1",
      "pg": "^8.1.0",
      "reflect-metadata": "^0.1.10",
      "rimraf": "^3.0.0",
      "rxjs": "^6.5.4",
      "sqlite3": "^4.1.1",
      "swagger-ui-express": "^4.1.2",
      "typeorm": "0.2.22",
      "uuid": "^3.3.3",
      "xss": "^1.0.6"
   },
   "config": {
      "commitizen": {
         "path": "./backend/node_modules/cz-conventional-changelog"
      }
   },
   "devDependencies": {
      "@nestjs/cli": "^6.13.3",
      "@nestjs/schematics": "^6.8.2",
      "@nestjs/testing": "^6.10.14",
      "@types/apicache": "^1.2.2",
      "@types/bcryptjs": "^2.4.2",
      "@types/express": "^4.17.2",
      "@types/jest": "^24.0.25",
      "@types/luxon": "^1.21.0",
      "@types/ms": "^0.7.31",
      "@types/node": "^8.10.59",
      "@types/passport-facebook-token": "^0.4.34",
      "@types/passport-jwt": "^3.0.3",
      "@types/passport-local": "^1.0.33",
      "@types/pdfmake": "^0.1.9",
      "@types/supertest": "^2.0.8",
      "@types/axios": "^0.14.0",
      "jest": "^24.9.0",
      "prettier": "^1.19.1",
      "supertest": "^4.0.2",
      "ts-jest": "^24.3.0",
      "ts-loader": "^6.2.1",
      "ts-node": "3.3.0",
      "tsconfig-paths": "^3.9.0",
      "tslint": "^5.20.1",
      "typescript": "3.7.4"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "coverageDirectory": "./coverage",
      "testEnvironment": "node"
   }
}
